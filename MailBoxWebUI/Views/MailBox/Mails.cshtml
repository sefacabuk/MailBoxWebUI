    <script>



        $(document).ready(function () {
            GetList();

            function GosterBeklet() {
                $('#page-top').css("opacity", "0.5");
                $('#loader').css("display", "block");
            }

            function GizleBeklet() {
                $('#page-top').css("opacity", "1");
                $('#loader').css("display", "none");
            }


            var unread = 0;
            var totalmessage = 0;
         function GetList() {
                GosterBeklet();
                $.ajax({
                    type: 'GET',
                    url: "/MailBox/MailList",
                    dataType: "json",
                    success: function(result) {
                        console.log(result);
                        $('#table_content').html('');
                        var table_content_html = "";

                        for (var i = 0; i < result.length; i++) {
                            var readHtml = "<i class='fas fa-flag text-warning'></i>";

                            if (result[i].isread == false) {
                                readHtml = "<i class='fas fa-flag text-danger'></i>";
                                table_content_html += "<tr style=';' class='table_item' data-row_id='" + result[i].id + "'>" +
                                    "   <td style='font-weight: bolder;background: #ece7df;border-right-color: #ece7df;'>" + readHtml + "</td>" +
                                    "   <td style='font-weight: bolder;background: #ece7df;border-right-color: #ece7df;'>" + result[i].subject + "</td>" +
                                    "   <td style='font-weight: bolder;background: #ece7df;border-right-color: #ece7df;'>" + result[i].content + "</td>" +
                                    "   <td style='background: #ece7df;border-right-color: #ece7df;'><button id='btnDelete' class='btn btn-danger'><i class='fas fa-trash'></i></button></td>" +
                                    "</tr>";
                            }

                            else {
                                table_content_html += "<tr class='table_item' data-row_id='" + result[i].id + "'>" +
                                    "   <td>" + readHtml + "</td>" +
                                    "   <td>" + result[i].subject + "</td>" +
                                    "   <td>" + result[i].content + "</td>" +
                                    "   <td><button id='btnDelete' class='btn btn-danger'><i class='fas fa-trash'></i></button></td>" +
                                    "</tr>";
                            }
                          
                        }

                        $('#table_content').html(table_content_html);


                    },
                    complete: function () {
                        GizleBeklet();
                    }
                });
            }
            $(document).on("click",
                '#btnMailBox',
                function (event) {

                    location.href = "/MailBox/Mails"

                });
        });

    </script>

